{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@cascade-i18n/core": ["packages/core/src/index.ts"],
      "@cascade-i18n/react": ["packages/react/src/index.ts"]
    }
  },
  "include": ["packages"]
} 